<?xml version="1.0" encoding="utf-8"?>
<pou name="PLC_PRG" pouType="program" xmlns="http://www.plcopen.org/xml/tc6_0200">
  <interface>
    <localVars>
      <variable name="Counter">
        <type>
          <INT />
        </type>
      </variable>
      <variable name="ButtonPressed">
        <type>
          <BOOL />
        </type>
      </variable>
      <variable name="ButtonTrigger">
        <type>
          <derived name="R_TRIG" />
        </type>
      </variable>
      <variable name="ResetPressed">
        <type>
          <BOOL />
        </type>
      </variable>
      <variable name="ResetTrigger">
        <type>
          <derived name="R_TRIG" />
        </type>
      </variable>
    </localVars>
  </interface>
  <body>
    <ST>
      <xhtml xmlns="http://www.w3.org/1999/xhtml">ButtonTrigger(CLK:= ButtonPressed, Q=&gt; );
IF (ButtonTrigger.Q) THEN
	Counter := Counter + 1;
END_IF

ResetTrigger(CLK:= ResetPressed, Q=&gt; );
IF (ResetTrigger.Q) THEN
	Counter := 0;
END_IF</xhtml>
    </ST>
  </body>
